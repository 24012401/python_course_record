{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "no task group",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Main",
            "args": [
                "-std=c++14",
                "-D DEBUG",
                "-D DBG_MACRO_NO_WARNING"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": " ",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}